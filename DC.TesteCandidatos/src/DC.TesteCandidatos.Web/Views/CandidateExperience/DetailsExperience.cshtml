@model DC.TesteCandidatos.Web.Models.CandidateExperiencesDetailsViewModel
@{
}

<div class="container">
    <div class="row text-center">
        <div class="col-12">
            <h1>Details Experience</h1>
        </div>
    </div>
    <div class="row pt-1 px-5 justify-content-start">
        <div class="col-2">
            @if (Model.HistoricBack.Equals("details"))
            {
                <a class="btn btn-primary" asp-controller="Candidates" asp-action="EditCandidates" asp-route-id="@Model.IdCandidate">Voltar</a>
            }
            else{
                <a class="btn btn-primary" asp-controller="CandidateExperience" asp-action="InclueExperience" asp-route-id="@Model.IdCandidate">Voltar</a>
            }
        </div>
    </div>
    @if (!String.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="row py-2">
            <div class="alert alert-danger" role="alert">@Model.ErrorMessage</div>
        </div>
    }
    <div class="row pt-5 py-5">
        <form class="border-dark border px-3 py-3 rounded">
            <div class="row justify-content-between">
                <div class="col-7">
                    <div class="row">
                        <div class="col-12 justify-content-start">
                            <label class="col-form-label" for="experiencesModal-Company">Company:</label>
                            <input type="text" id="experiencesModal-Company" class="form-control" asp-for="Company" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 justify-content-start">
                            <label class="col-form-label" for="experiencesModal-Job">Job:</label>
                            <input type="text" id="experiencesModal-Job" class="form-control" asp-for="Job" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 justify-content-start">
                            <label class="col-form-label" for="experiencesModal-Salary">Salary:</label>
                            <input type="current" id="experiencesModal-Salary" class="form-control" asp-for="Salary" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 justify-content-start">
                            <label class="col-form-label" for="experiencesModal-beginDate">Begin:</label>
                            <input type="date" id="experiencesModal-beginDate" class="form-control" asp-for="BeginDate" />
                        </div>
                        <div class="col-6 justify-content-start">
                            <label class="col-form-label" for="experiencesModal-endDate">End:</label>
                            <input type="date" id="experiencesModal-endDate" class="form-control" asp-for="EndDate" />
                        </div>
                    </div>
                </div>
                <div class="col-5">
                    <label for="experiencesModal-description" class="col-form-label">Description:</label>
                    <textarea asp-for="Description" id="experiencesModal-description" rows="10" cols="50" class="form-control"></textarea>
                </div>
            </div>
            <div class="row justify-content-end my-3 py-3">
                <input type="hidden" asp-for="IdExperince" />
                <input type="hidden" asp-for="IdCandidate" />
                <div class="col-3">
                    <button class="btn btn-secondary w-100" asp-controller="CandidateExperience" asp-action="ResetDetailExperience">Reset</button>
                </div>
                <div class="col-3">
                    <button class="btn btn-danger w-100" asp-controller="CandidateExperience" asp-action="DeleteExperience" 
                        asp-route-id="@Model.IdExperince">Delete</button>
                </div>
                <div class="col-3">
                    <button class="btn btn-primary w-100" asp-controller="CandidateExperience" asp-action="SaveEditExperience">Edit</button>
                </div>
            </div>
        </form>
    </div>
</div>